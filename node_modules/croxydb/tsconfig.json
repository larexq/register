{
    "compilerOptions": {
        "outDir": "./file/*",
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "declaration": false,
        "pretty": true,
        "strictNullChecks": true,
        "lib": [ "es2016","dom","scripthost" ]
    },
    "include": [
        "./typings/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "./node_modules/@types"
    ]
}